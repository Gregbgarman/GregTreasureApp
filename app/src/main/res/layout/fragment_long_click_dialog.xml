<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Dialogs.LongClickDialog">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/tvflcviewprofile"
        android:layout_width="255dp"
        android:layout_height="45dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="35dp"
        android:fontFamily="@font/alike_angular"
        android:gravity="center|start"
        android:text="TextView"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/flccardviewprofile"
        app:layout_constraintTop_toBottomOf="@+id/tvflcSendMessage" />

    <TextView
        android:id="@+id/tvflcSendMessage"
        android:layout_width="255dp"
        android:layout_height="45dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="34dp"
        android:fontFamily="@font/alike_angular"
        android:gravity="center|start"
        android:text="TextView"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/flcCardviewmsg"
        app:layout_constraintTop_toBottomOf="@+id/tvflcAddfav" />

    <ImageView
        android:id="@+id/ivflcProfilepic"
        android:layout_width="87dp"
        android:layout_height="78dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvlcdPersonName"
        android:layout_width="312dp"
        android:layout_height="27dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/alike_angular"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivflcProfilepic" />

    <ImageView
        android:id="@+id/ivflcBig"
        android:layout_width="301dp"
        android:layout_height="247dp"
        android:layout_marginTop="33dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvlcdPersonName"
        tools:src="@tools:sample/avatars" />

    <androidx.cardview.widget.CardView
        android:id="@+id/flcCardviewmsg"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivflcBig">

        <ImageView
            android:id="@+id/ivflcmessageicon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            tools:srcCompat="@drawable/messageicon" />


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/flccardviewprofile"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/flcCardviewmsg">

        <ImageView
            android:id="@+id/ivflcprofileicon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            tools:srcCompat="@drawable/randomperson" />


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/flccardviewaddtofavorite"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="22dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivflcBig">

        <ImageView
            android:id="@+id/ivflcfavoritesicon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            tools:srcCompat="@drawable/starimage" />


    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvflcAddfav"
        android:layout_width="255dp"
        android:layout_height="45dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="22dp"
        android:fontFamily="@font/alike_angular"
        android:gravity="center|start"
        android:text="TextView"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/flccardviewaddtofavorite"
        app:layout_constraintTop_toBottomOf="@+id/ivflcBig" />

</androidx.constraintlayout.widget.ConstraintLayout>